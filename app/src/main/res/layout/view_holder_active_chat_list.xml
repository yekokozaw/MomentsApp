<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:padding="@dimen/margin_medium"
    android:orientation="horizontal"
    android:layout_height="60dp">

    <com.padc.moments.views.components.RoundedProfileImage
        android:id="@+id/ivProfileImageActiveChat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:elevation="1dp"
        app:cornerRadius="25dp"
        app:hasBorderCircle="false"
        app:isActive="false"
        app:srcCompat="@drawable/my_profile" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipActive"
        android:layout_width="@dimen/margin_10dp"
        android:layout_height="@dimen/margin_10dp"
        android:backgroundTint="#26ed5b"
        android:layout_marginEnd="2dp"
        app:chipStrokeColor="@color/black"
        android:layout_marginBottom="2dp"
        android:layout_gravity="bottom|right"
        android:elevation="16dp"/>



</FrameLayout>