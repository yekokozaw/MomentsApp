<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight">

<!--    when I set layout height to wrap_content. the ui has error.
        the ui set image height to 0 because ui don't know the image is coming from the network.
        this error occurred when I update the firebase.
-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMomentPictureMoment"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/my_profile" />

    <FrameLayout
        android:layout_width="43dp"
        android:layout_height="30dp"
        android:layout_gravity="end|top"
        android:layout_marginTop="@dimen/margin_14dp"
        android:layout_marginEnd="@dimen/margin_14dp"
        android:background="@drawable/background_image_count">

        <TextView
            android:id="@+id/tvImageCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="@string/_1_3"
            android:textColor="@color/white"
            android:textSize="@dimen/text_regular" />

    </FrameLayout>

</FrameLayout>